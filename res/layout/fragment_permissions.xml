<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              tools:context=".utils.Permissions_fragment"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissionsTitle"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textStyle="bold"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissions"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:id="@+id/textView"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/scrollView2"
        android:layout_weight="1"
        android:overScrollMode="always"
        android:fadingEdge="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mandatory"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:id="@+id/textView2"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/sms"
                            android:layout_marginRight="4dp"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_SMS"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:id="@+id/textView3"
                            android:textColor="@color/redDark"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_SMS_info"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:id="@+id/textView4"
                        android:layout_marginLeft="12dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mandatory"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:id="@+id/textView5"
                    android:layout_marginTop="6dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/google_maps"
                            android:layout_marginRight="4dp"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_GPS"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:id="@+id/textView6"
                            android:textColor="@color/redDark"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_GPS_info"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:id="@+id/textView7"
                        android:layout_marginLeft="12dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/sym_contact_card"
                            android:layout_marginRight="4dp"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_CTX"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:id="@+id/textView8"
                            android:textColor="@color/redDark"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_CTX_info"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:id="@+id/textView9"
                        android:layout_marginLeft="12dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/phone_call"
                            android:layout_marginRight="4dp"
                            android:id="@+id/imageView3"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_PHN"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:id="@+id/textView17"
                            android:textColor="@color/redDark"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_PHN_info"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:id="@+id/textView18"
                        android:layout_marginLeft="12dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissionNota"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:id="@+id/textView10"
        android:layout_marginTop="6dp"
        android:textStyle="italic"
        android:textSize="12sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/permissionsButton"
            android:layout_gravity="right"
            android:text="@string/permissionButton"
            android:textColor="@color/accent_material_light"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permissionNotice"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textSize="10sp"
            android:textColor="@color/redDark"
            android:clickable="false"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/permissionsNotice"/>
    </FrameLayout>

</LinearLayout>
